<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>

    <LinearLayout android:id="@+id/container"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_gravity="center_horizontal"
                  android:fitsSystemWindows="true"
                  android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:text="Open API"
            app:titleTextColor="@android:color/white"/>

        <!--根布局节点设置clipChildren=false，这个属性默认为true
        是否限制子视图在其范围内。其次就是要用layout_grivate来控制超出的部分显示位置。-->
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false">
            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_gravity="top"
                android:overScrollMode="never"
                app:tabBackground="@color/colorPrimary"
                app:tabIndicatorColor="@color/colorPrimary"
                app:tabMinWidth="60dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@android:color/white"
                app:tabTextColor="#33ffffff">

            </android.support.design.widget.TabLayout>
            <!-- tabIndicatorColor 下方滚动的下划线颜色  -->
            <!-- app:tabIndicatorHeight  下方指示条的高度  -->
            <!-- app:tabSelectedTextColor  tab被选中后，文字的颜色   -->
            <!-- app:tabTextAppearance   可以改变tab中的字体的大小  -->
            <!-- app:tabTextColor   tab中字体的颜色  -->
            <!-- app:tabMode="scrollable"   tab中设置横向scroll  -->

        </android.support.v4.view.ViewPager>


    </LinearLayout>
</layout>
